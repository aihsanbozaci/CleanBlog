<!DOCTYPE html>
<html lang="en">

  <%- include('partials/_head.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/cover.jpeg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="https://github.com/aihsanbozaci">Author</a>
              <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
 <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto"> <p><%= post.detail2 %></p>
        </div>
      </div>
    </div>
  </article>

  <hr>
  <a href="/post/<%= post._id %>?_method=DELETE" onclick="return confirm('Are you sure you want to delete this post?')"  style="float: right; margin-right: 15%;" class="btn btn-danger">Delete</a>
  <a href="/post/edit/<%= post._id %>" style="float: right; margin-right: 1%;" class="btn btn-info">Edit</a>
  
  <!-- Footer -->
 <%- include('partials/_footer.ejs') -%>

</body>

</html>
